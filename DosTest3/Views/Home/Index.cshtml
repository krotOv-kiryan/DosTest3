@model IEnumerable<DosTest3.Models.FileModel>
@{
    ViewData["Title"] = "Добавление файла";
}

<div>
    <h3>Выберите файл для загрузки</h3>
    <form asp-action="AddFile" asp-controller="Home" method="post" enctype="multipart/form-data">
        <input type="file" name="uploadedFile" /><br>
        <input type="submit" value="Загрузить" />
    </form>
</div>

<div>
    <table width="100%" cellspacing="0" cellpadding="5"  id="maket">
        <tr>
            <td id="leftcol" 
                width="600" 
                valign="top">

                <h3> Содержимое файла </h3>

                <div>
                   
                </div>

                <div>
                    <h3>Конвертировать в </h3>
                    <select code>
                        <option value="s1" selected >utf-8</option>
                        <option value="s2" code>    win-1251</option>
                        <option value="s3" code>    cp-886</option>
                        <option value="s4" code>    koi-8</option>
                    </select>
                    <button type="button" action="encoding" class="btn btn-primary"> Конвертировать</button>
