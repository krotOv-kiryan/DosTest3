@model IEnumerable<DosTest3.Models.FileModel>
@{
    ViewData["Title"] = "Добавление файла";
}

<div>

    <h3>Выберите файл для загрузки</h3>
    <form asp-action="AddFile" asp-controller="Home" method="post" enctype="multipart/form-data">
        <input type="file" name="uploadedFile" /><br>
        <input type="submit" value="Загрузить" />
    </form>
</div>

<div>

    <table width="100%" cellspacing="0" cellpadding="5"  id="maket">
        <tr>
            <td id="leftcol" 
                width="600" 
                valign="top">

                <h3> Содержимое файла </h3>
                <div>

                </div>
                <div>
                    <h3>Конвертировать в </h3>
                    <button type="button" class="btn btn-primary">koi-8</button>
                    <button type="button" class="btn btn-primary">win-1251</button>
                    <button type="button" class="btn btn-primary">utf-8</button>
                    <button type="button" class="btn btn-primary">cp-886</button>
                </div>
            </td>

            <td id="spacer"></td>


            <td id="rightcol"
                valign="top">
                <h3>Все файлы</h3>
                <div>
                    @*@foreach (var f in Model)
                    {
                      <p><img src="@Url.Content(f.Path)"></p>
                    }*@

                </div>
            </td>
        </tr>
    </table>
</div>
