                      <button type="button" action="" class="btn btn-primary"></button>
                      <button type="button" action="" class="btn btn-primary"></button>*@

                </div>
            </td>

            <td id="spacer"></td>

            <td id="rightcol"
                valign="top">
                <h3>Все файлы</h3>
                <div>
                    @*@foreach (var f in Model)
